---
const successStories = [
  {
    name: "David Park",
    company: "TechGreen Solutions",
    image: "https://i.pravatar.cc/150?img=1",
    quote: "IdeaForge helped us connect with the perfect investors who shared our vision for sustainable technology."
  },
  {
    name: "Lisa Johnson",
    company: "EduTech Innovations",
    image: "https://i.pravatar.cc/150?img=2",
    quote: "The mentor matching system was crucial in helping us refine our business model and go-to-market strategy."
  },
  {
    name: "Marcus Chen",
    company: "HealthAI",
    image: "https://i.pravatar.cc/150?img=3",
    quote: "Through IdeaForge's crowdfunding marketplace, we exceeded our funding goal by 200%."
  }
];
---

<section class="bg-gray-50 py-16">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-12 text-center">Success Stories</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {successStories.map(story => (
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex flex-col items-center text-center">
            <img
              src={story.image}
              alt={story.name}
              class="w-20 h-20 rounded-full mb-4"
            />
            <blockquote class="text-gray-600 mb-4">"{story.quote}"</blockquote>
            <cite class="not-italic">
              <div class="font-semibold">{story.name}</div>
              <div class="text-sm text-gray-500">{story.company}</div>
            </cite>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>